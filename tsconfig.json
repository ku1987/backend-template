{
  "compilerOptions": {
    "lib": ["ES2018"],
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "incremental": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "outDir": "./build",
    "strictNullChecks": false,
    "types": [
      "koa-body",
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "/"
  ]
}
